<h2>Edit the Brewery: {{brewery.name}}</h2>

<form action="/brewery/{{brewery._id}}/edit" method="post">

    <p>
        <label>Name</label>
    <div class="field label border fill">
        <input type="text" value="{{brewery.name}}">
    </div>
    </p>

    <p>
        <label>Latitude</label>
    <div class="field label border fill">
        <input type="number" value="{{brewery.lat}}">
    </div>
    </p>

    <p>
        <label>Longitude</label>
    <div class="field label border fill">
        <input type="number" value="{{brewery.long}}">
    </div>
    </p>

    <p>
        <label>City</label>
    <div class="field label border fill">
        <input type="text" name="city" value="{{brewery.city}}" />
    </div>
    </p>

    <p>
        <label>State</label>
    <div class="field label border fill">
        <input type="text" name="state" value="{{brewery.state}}" />
    </div>
    </p>

    <p>
        <label>Postcode</label>
    <div class="field label border fill">
        <input type="number" name="zip" value="{{brewery.zip}}" />
    </div>
    </p>

    <p>
        <label>Country</label>
    <div class="field label border fill">
        <input type="text" name="country" value="{{brewery.country}}" />
    </div>
    </p>

    <p>
        <label>Website</label>
    <div class="field label border fill">
        <input type="text" name="website" value="{{brewery.website}}" />
    </div>
    </p>

    <p>
        <label>Description</label>
    <div class="field textarea label border fill">
        <textarea name="description" cols="30" rows="4" value="{{brewery.description}}"> </textarea>
    </div>
    </p>


    <button class="extra green margin" type="submit">
        <img src="/images/favicon.png" class="responsive">
        <span>Create Brewery</span>
    </button>
</form>

<div>
    <button class="extend square round amber extra margin"
        onclick="location.href='/brewery/brewery-list'"><i>arrow_back</i><span>Back</span></button>

</div>