<h1>Beers in our DB</h1>

<a href="/beers/beer-create">Create New Beer</a>

{{#each beers}}
<section class="beer-list">
    <img src="{{this.image}}" alt="beer" width="500" height="600">
    <h2>{{this.title}}</h2>
    <p>Rating: {{this.rating}}</p>
    <p><a href="/beers/{{_id}}">Show Details</a>
    </p>
</section>
{{/each}}