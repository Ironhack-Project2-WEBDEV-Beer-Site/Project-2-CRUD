<h2>Edit the Beer: {{title}}</h2>

<form action="/beers/{{_id}}/edit" method="post">
    <label> Title:
        <input type="text" name="title" value="{{title}}" />
    </label>

    <label> Brewery:
        <input type="text" name="brewery" value="{{author}}" />
    </label>

    <label> Description:
        <textarea name="description" cols="30" rows="4">{{description}}</textarea>
    </label>

    <label> Rating:
        <input type="number" name="rating" min="1" max="5" value="{{rating}}" />
    </label>

    <button>Save changes</button>
</form>

<p><a href="/beers/{{_id}}">Back</a></p>