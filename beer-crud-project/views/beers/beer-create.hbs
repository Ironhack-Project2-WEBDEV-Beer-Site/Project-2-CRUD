<div class="new-beer">
    <h1>Create a New Beer</h1>
    <p>
    <form action="/beers/beer-create" method="post">
        <label> Title:
            <input type="text" name="title" />
        </label>
        </p>

        <p>
             <select name="brewery">
            {{#each breweries}}
        <option value={{breweries._id}}>{{breweries.name}}</option>
            {{/each}}
    </select>
        </p>

        <p>
            <label> Description:
                <textarea name="description" cols="30" rows="4"> </textarea>
            </label>
        </p>

        <p>
            <label> Rate:
                <input type="number" name="rating" min="1" max="5" />
            </label>
        </p>

        <div>
            <select name="beerstyle" id="beerstyle">
                {{#each beerstyle.enumValues}}
                <option value={{this}}>{{this}}</option>
                {{/each}}
            </select>
        </div>

        <button type="submit"> Create </button>
    </form>

    <p><a href="/beers/beer-list">Back</a></p>
</div>