<div class="new-beer">
    <h3>Add a New Beer to the Database</h3>
    <p>
    <form action="/beers/beer-create" method="post">
        <label> Title:
            <input type="text" name="title" />
        </label>
        </p>

        <label> Brewery:
            <div class="field suffix fill border">
                <select name="brewery">
                    {{#each info}}
                    <option value="{{_id}}">{{name}}</option>
                    {{/each}}
                </select>
            </div>
        </label>


        <p>
            <label> Description:
                <textarea name="description" cols="30" rows="4"> </textarea>
            </label>
        </p>

        <p>
            <label> Rate:
                <input type="number" name="rating" min="1" max="5" />
            </label>
        </p>


        <label>Beerstyle:
            <div>
                <select name="beerstyle" id="beerstyle">
                    {{#each beerstyle.enumValues}}
                    <option value="{{this}}">{{this}}</option>
                    {{/each}}
                </select>
            </div>
        </label>

        <button type="submit"> Create </button>
    </form>

    <p><a href="/beers/beer-list">Back</a></p>
</div>